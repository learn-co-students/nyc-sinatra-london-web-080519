<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method="POST">

    <input id="hidden" type="hidden" name="_method" value="PATCH">
    
    <label>Landmark Name</label><br>
    <input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>"><br><br>
    
    <label>Landmark Year Completed</label><br>
    <input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>"><br><br>

    <h3>Title(s):</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" name="landmark[title_ids][]" id="title_<%= title.id %>"
        value="<%= title.id %>" <%= 'checked' if @landmark.titles.include?(title) %>><%= title.name %><br>
    <% end %>

    <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
