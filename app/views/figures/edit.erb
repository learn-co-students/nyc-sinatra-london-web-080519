<form action="/figures/<%= @figure.id %>" method="POST">

    <input id="hidden" type="hidden" name="_method" value="PATCH">
    
    <label>Figure Name</label><br>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br><br>

    <h3>Title(s):</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>"
        value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br>
    <% end %>

    <h3>Landmark(s):</h3>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" 
        value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
        <%= landmark.name %><br>
    <% end %>

    <p>Create New Landmark:</p>
    Name: <input type="text" name="landmark[name]" id="new_landmark">
    Year: <input type="text" name="landmark[year_completed]" id="landmark_year">


    <input type="submit" value="Edit Figure">
</form>