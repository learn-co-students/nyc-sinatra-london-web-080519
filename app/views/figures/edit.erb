<h1>Edit Figure</h1>
<form action="/figures/<%= @figure.id %>" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <label for="figure_name">Name:</label>
    <input type="text" id="figure_name" name=figure[name] value="<%= @figure.name %>">

    <h2>Titles</h2>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %><br>
    <% end %>

    <h2>Create New Title:</h2>
    <input type="text" name="title[name]">

    <h2>Landmarks</h2>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %><br>
    <% end %>

    <h2>Create New Landmark:</h2>
    <label for="new_landmark">Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark"><br>
    <label for="landmark_year">Construction Year:</label>
    <input type="number" name="landmark[year_completed]" id="landmark_year"><br>

    <input type="submit" value="Edit Figure">
</form>